<div class="titleB">Edit group <%= @group.name%></div>
<br/>
<%= error_messages_for :group %>

<% form_for(@group, :url => member_group_path(@group), :html => { :multipart => true, :method => :put}) do |f| %>
  <fieldset>
    <div class="fields">
      <p>
        <label for="group_name">Name</label>
        <%= f.text_field  :name, :class => 'fieldbox wide' %>
      </p>
      <p>
        <label for="group_description">Description</label>
        <%= f.text_area  :description, :class => 'fieldbox wide', :size => '60x10' %></dd>
      </p>
      <p>
        <label for="group_tag_list">Tags</label>
        <%= f.text_field  :tag_list, :class => 'fieldbox' %><br/>
        <span class="helpinfo">Separated by commas</span>
      </p>
      <p>
        <label for="group_image">Image</label>
        <%= image_for_group(@group, 'medium') %><br/>
        <%= file_field "group", "image" %><br/>
        <span class="helpinfo">If you want to change the groupÂ´s image, select a new image file. Otherwise, let it unchanged.</span>
      </p>
      <p>
        <label for="group_private" class="nolabel"><%= f.check_box :private %> Private</label><br/>
        <span class="helpinfo">A private group won't appear in listings.</span>
      </p>
      <p>
        <label for="group_moderated" class="nolabel"><%= f.check_box :moderated %> Moderated</label><br/>
        <span class="helpinfo">In a moderated group each join request should be approved by one of group's moderators.</span>
      </p>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit "Update",:class=>"button mainaction" %>
  </div>
<% end %>
