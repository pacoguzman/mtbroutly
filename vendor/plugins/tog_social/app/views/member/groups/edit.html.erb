<div class="titleB"><%= I18n.t('tog_social.groups.member.edit_group', :group => @group.name) %></div>
<br/>
<%= error_messages_for :group %>

<% form_for(@group, :url => member_group_path(@group), :html => { :multipart => true, :method => :put}) do |f| %>
  <fieldset>
    <div class="fields">
      <p>
        <label for="group_name"><%= I18n.t('tog_social.groups.model.name') %></label>
        <%= f.text_field  :name, :class => 'fieldbox wide' %>
      </p>
      <p>
        <label for="group_description"><%= I18n.t('tog_social.groups.model.description') %></label>
        <%= f.text_area  :description, :class => 'fieldbox wide', :size => '60x10' %></dd>
      </p>
      <p>
        <label for="group_tag_list"><%= I18n.t('tog_social.tags.tags') %></label>
        <%= f.text_field  :tag_list, :class => 'fieldbox' %><br/>
        <span class="helpinfo"><%= I18n.t('tog_social.tags.separated_by_comma') %></span>
      </p>
      <p>
        <label for="group_image"><%= I18n.t('tog_social.groups.model.image') %></label>
        <%= image_for_group(@group, 'medium') %><br/>
        <%= file_field "group", "image" %><br/>
        <span class="helpinfo"><%= I18n.t('tog_social.groups.model.image_help') %></span>
      </p>
      <p>
        <label for="group_private" class="nolabel"><%= f.check_box :private %> <%= I18n.t('tog_social.groups.model.private') %></label><br/>
        <span class="helpinfo"><%= I18n.t('tog_social.groups.model.private_help') %></span>
      </p>
      <p>
        <label for="group_moderated" class="nolabel"><%= f.check_box :moderated %> <%= I18n.t('tog_social.groups.model.moderated') %></label><br/>
        <span class="helpinfo"><%= I18n.t('tog_social.groups.model.moderated_help') %></span>
      </p>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit I18n.t('tog_social.groups.member.update'),:class=>"button mainaction" %>
  </div>
<% end %>
