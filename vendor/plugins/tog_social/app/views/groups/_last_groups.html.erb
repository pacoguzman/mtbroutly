<div class="portlet portletJ" id="portlet_last_groups">
    <h2><span>Last groups</span></h2>
    <div class="portlet_content">
        <ul>
            <% last_groups(3).each do |group| -%>
              <li class="clearfix">
                  <div class="image"><%=link_to image_for_group(group, 'medium'), group_path(group)%></div>
                  <div class="title"><%= group.name -%></div>
                  <div class="text">
                      Created at <%=I18n.l(group.created_at, :format => :short)%>
                      <br/>
                      <%= group.members.size -%> members
                  </div>
                  <div class="more"><%= link_to 'more info', group_path(group) -%></div>
              </li>            
            <% end -%>            
        </ul> 
    </div>    
</div> <!-- /.portlet_pluginsTog -->