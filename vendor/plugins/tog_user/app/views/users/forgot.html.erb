<div class="titleB">Forgot your password?</div>
<p>
    <span class="fontsmaller">After sending this form, you will receive an email with instructions for reseting your password.</span>  
</p>


<div id="area_signup">
   <%= error_messages_for :user %>
   <% form_for :user, :url => forgot_path, :html => {:id => "f_signup", :name => "f_signup" } do |f| -%>
    <fieldset>
     <p>
       <label for="email">Your email address</label>
       <%= f.text_field :email, :class => "fieldbox", :size => "74" %>
     </p>
    </fieldset>
    <div class="actions">
      <%= submit_tag 'Send', :class => "button mainaction" %>
    </div>
  
   <% end -%>
</div>
