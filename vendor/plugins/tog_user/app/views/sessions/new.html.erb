<div class="titleB"><%= I18n.t('tog_user.sessions.new') %></div>
<p>
    <span class="fontsmaller"><%= I18n.t('tog_user.sessions.create_account') %> <%= link_to I18n.t('tog_user.sessions.click_to_sign_up'), signup_path %>.</span>
</p>

<br />
<% form_tag session_path do -%>
  <fieldset>
    <div class="fields">
      <p>
        <% if Tog::Config["plugins.tog_user.email_as_login"] %>
        <label for="login"><%= I18n.t("tog_user.sessions.email") %></label>
        <% else %>
        <label for="login"><%= I18n.t("tog_user.sessions.login") %></label>
        <% end %>
        <%= text_field_tag 'login', nil, :class => "fieldbox", :size => 40 %>
      </p>

      <p><label for="password"><%= I18n.t("tog_user.sessions.password") %></label>
      <%= password_field_tag 'password', nil, :class => "fieldbox", :size => 40 %></p>

      <p><%= check_box_tag 'remember_me' %><label for="remember_me"> <%= I18n.t("tog_user.sessions.remember_me") %></label></p>

      <div class="actions">
        <%= submit_tag I18n.t('tog_user.sessions.sign_in'), :class => "button mainaction" %> | <%= I18n.t("tog_user.sessions.password_forgotten") %> <%= link_to "#{I18n.t('tog_user.sessions.email_you')}", forgot_path %> 
      </div>
    </div>
  </fieldset>
<% end -%>
